import Layout from '../layouts/Layout.astro';
---

<Layout
  description="ODY Spatial · Where Luxury Finds Its Home"
  title="ODY Spatial · The Architecture of Refined Living"
>
  <Hero />
  <OurWorks />  <!-- Cal floating-popup embed code begins -->
