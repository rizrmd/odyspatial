---
import { Image } from 'astro:assets';

const services = [
  {
    name: 'WILSQ',
    tags: ['3 Rooms', 'Japandi', 'Wabisabi', 'Modern Farmhouse'],
    desc: 'Singapoeran HDB urban living.',
    images: [import('../../../public/works/wilsq/01.png')],
  },
];
---

<section class="mt-[100px] bg-primary-100 py-16 sm:py-20">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="flex flex-col gap-12 sm:gap-16">
      <h2 class="text-3xl font-medium tracking-tight sm:text-4xl">Our Works</h2>
      <div class="grid gap-8 lg:grid-cols-3">
        {
          services.map((service) => (
            <div class="flex flex-col gap-12 border">
              <div class="flex flex-col items-stretch gap-4">
                <Image src={service.images[0]} width="1000" alt={service.name + ' - 1'} />
                <div class="flex flex-col items-stretch space-y-3 px-6 pb-8 pt-4">
                  <h3 class="text-3xl font-bold">{service.name}</h3>
                  <p>{service.desc}</p>
                  <div class="flex select-none flex-wrap text-base text-primary-950/70 dark:text-primary-200/70 sm:text-lg">
                    {service.tags.map((e) => {
                      return (
                        <div class="mb-1 mr-1 cursor-pointer border border-primary-950 px-2 transition-all hover:bg-primary-950 hover:text-white">
                          {e}
                        </div>
                      );
                    })}
                  </div>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
