---
import { Image } from 'astro:assets';
import LightBox from '../react/LightBox.astro';
---

<section class="">
  <div class="mx-auto max-w-2xl lg:max-w-7xl lg:px-8">
    <div class="flex flex-col gap-16">
      <div class="flex flex-col space-y-[2em]">
        <div class="w-full aspect-video">
          <iframe
            width="100%"
            height="100%"
            src="https://www.youtube.com/embed/i-vJM9RIQgo?autoplay=1&mute=1"
            title="ODY Spatial Video"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
            allowfullscreen
            class="w-full h-full"
          ></iframe>
        </div>
        <div class="flex flex-1 items-center justify-center px-[20px] lg:px-0">
          <h1
            class="flex flex-col items-center justify-center text-center font-hero text-[4em] uppercase leading-[1.1em] lg:text-[6em]"
          >
            <div class="motion-preset-slide-left">Transform Your Space Into Dreams</div>
          </h1>
        </div>
      </div>
    </div>
  </div>
</section>
